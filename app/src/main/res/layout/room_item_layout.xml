<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textViewRoomName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:text="Room 1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:text="Occupied"
                        android:textSize="18sp" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardTitle"
                    android:layout_marginStart="16dp"
                    android:foregroundGravity="center_vertical"
                    android:rating="4.4" />

                <TextView
                    android:id="@+id/textViewProjectProduceRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardTitle"
                    android:layout_toEndOf="@id/ratingBar"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="8/9"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/lineSeparate"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ratingBar"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/incomeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@id/lineSeparate"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/textViewGuestName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="start"
                        android:paddingEnd="8dp"
                        android:paddingStart="16dp"
                        android:text="Nguyen Quoc Thanh"
                        android:textSize="20sp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone_purple_a700_24dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message_purple_a700_24dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btEdit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/incomeLayout"
                    android:layout_below="@id/incomeLayout"
                    android:layout_marginEnd="8dp"
                    android:text="@string/btEdit"
                    android:textColor="@color/secondaryColor" />

                <Button
                    android:id="@+id/btCopy"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incomeLayout"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/btEdit"
                    android:text="@string/btCopy"
                    android:textColor="@color/secondaryColor" />

                <Button
                    android:id="@+id/btDelete"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incomeLayout"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/btCopy"
                    android:text="@string/btDelete"
                    android:textColor="@color/secondaryColor" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>